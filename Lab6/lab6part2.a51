		;BOUNCING CAT WITH DPTRS
		LED EQU P1
		
		ORG 0
MAIN:
		MOV R4, #6  ; COUNTER
		MOV DPTR, #TABLE
		CLR A
		
DOUBLE_BOUNCE:
		CLR A
		MOVC A, @A+DPTR
		MOV LED, A ; OUTPUT DATA ONTO PORT 1
		
		LCALL DELAY
		INC DPTR
		DJNZ R4, DOUBLE_BOUNCE
		SJMP MAIN
	
DELAY:
		
DLY0:  	MOV  R1, #0FFH
DLY1:  	MOV  R2, #0FFH
DLY2:  	DJNZ R2, DLY2
       	DJNZ R1, DLY1
        DJNZ R3, DLY0	
		RET
		
		ORG 0400H
TABLE:	DB 81H,42H,24H,18H,24H,42H
	   	END	 
